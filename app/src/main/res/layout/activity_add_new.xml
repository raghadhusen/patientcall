<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNew"
    android:background="#ffff"
    >

    <ImageView
        android:layout_width="223dp"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="40dp"
        android:padding="0dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_02"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Family ID"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_02"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Family Name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.03"
        android:background="#a4acad"
        android:backgroundTint="#c7e4e8"
        android:drawableLeft="@drawable/shape_03"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColorHint="#a4acad"
        android:textSize="16sp" />

    <Button
        android:id="@+id/add"
        android:layout_width="339dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/rectangle_3"
        android:clickable="true"
        android:onClick="add_new"
        android:padding="16dp"
        android:text="Add New family"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp"
        tools:ignore="OnClick" />

</RelativeLayout>