<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Activity">

    <LinearLayout
        android:id="@+id/navigation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="#213a38"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#213a38"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true">

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="62dp"


            android:layout_alignParentTop="true"
            android:backgroundTint="#213a38"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="90dp"


            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:textColor="#fff"
            android:textSize="20dp" />
        <ImageButton
            android:layout_width="81dp"
            android:layout_height="62dp"
            android:id="@+id/notification"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:backgroundTint="#213a38"
            app:srcCompat="@drawable/hearts"

             />

    </RelativeLayout>





    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/navigation1"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="395dp"
            android:layout_height="443dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/layer_3"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="2dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="445dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="54dp"
            android:src="@drawable/image_activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:layout_width="162dp"
            android:layout_height="98dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:src="@drawable/iimg"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="206dp"
            android:text="81 Pmb"

            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="201dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="215dp"
            android:layout_height="8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="200dp"
            android:background="@drawable/line_background"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
           />

</RelativeLayout>





    <ImageButton
        android:id="@+id/doctor"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"


        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:src="@drawable/doctor"
        android:onClick="DoctorActivity"

        />

    <ImageButton
        android:id="@+id/family"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"


        android:layout_centerHorizontal="true"
        android:src="@drawable/family"
        android:onClick="FamilyActivity"
        />

    <ImageButton
        android:id="@+id/location"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"


        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:src="@drawable/location"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:onClick="LocationActivity"
        />

</RelativeLayout>



